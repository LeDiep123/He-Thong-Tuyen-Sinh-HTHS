@model He_Thong_Tuyen_Sinh_HTHS.Areas.Admin.Model.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CodePen - Finance Mobile Application-UX/UI Design Screen One</title>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap'>
    <link href="~/Assets/adminTest/style.css" rel="stylesheet" />

</head>
<body>
    <!-- partial:index.partial.html -->
    <div class="screen-1">
       
        <div class="form-control">
            @Html.ValidationSummary(false, "", "error")
        </div>
        @using (Html.BeginForm())
        {
          @Html.AntiForgeryToken()
                <div class="email">
                    @Html.LabelFor(model => model.UseName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="sec-2">
                        <ion-icon name="mail-outline"></ion-icon>
                        @Html.EditorFor(model => model.UseName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UseName, "", new { @class = "text-danger" })
                    </div>
                </div>
                                <div class="password" style="margin-top:35px;">
                                    @Html.LabelFor(model => model.Password)
                                    <div class="sec-2">
                                        <ion-icon name="lock-closed-outline"></ion-icon>
                                        @Html.PasswordFor(model => model.Password)
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        
                                    </div>
                                </div>
          <button type="submit" class="login form-group" style="margin-top:30px;">Login </button>}
    </div>
    <!-- partial -->
</body>
</html>






