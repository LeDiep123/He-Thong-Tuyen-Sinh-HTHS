<div class="box-body">
    <table id="example2" class="table table-bordered table-hover">

        <thead>
            <tr>
                <th>
                    <input type="checkbox" name="name" value="" id="checkall" />
                </th>
                <th>Họ tên học sinh</th>
                @*<th>Mã học sinh</th>*@
                <th>Mã hồ sơ</th>
                @*<th>Điểm học bạ</th>*@
                <th>Điểm ưu tiên</th>
                @*<th>Điểm thi</th>*@
                <th>Trạng thái</th>

                <th style=" width:15%">Chức năng</th>

            </tr>
        </thead>
        <tbody>
            @if (All != null)
            {
                foreach (var item in All)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="name" value="" class="Checks" />
                        </td>
                        <td>@item.TenHS</td>

                        <td>DC21</td>
                        <td>
                            @{string ut = ""; if (item.DTUT == 1) { ut = "2"; }
                                else if (item.DTUT == 2) { ut = "1"; }
                                else if (item.DTUT == 3) { ut = "1.5"; }
                                else if (item.DTUT == 4) { ut = "1.5"; }
                        }@ut
                    </td>

                    <td>
                        @{
                            string tt = ""; if (item.TrangThai == 3) { tt = "Đã duyệt"; }
                        }@tt
                    </td>

                    <td>
                        <a href="#" style="margin-left:10px" onclick="seeView(@item.ID)"> <u>Xem</u> </a>

                        <a href="#" style="margin-left:10px" onclick="Edit(@item.ID)"> <u>Sửa</u></a>
                        <a href="#" style="margin-left:10px"> <u>Hủy Duyệt</u></a>
                    </td>
                </tr>


            }

        }

        </tbody>
    </table>
